<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.RunnerInfoMapper">
    <select id="selRunnerInfo" parameterType="long" resultType="map"> 
        select 
			RUNNER_NAME,
			RUNNER_AGE,
			RUNNER_GROUP,
			RUNNER_WEIGHT,
			RUNNER_HIGHT,
			RUNNER_WIN_RATE
		from t_runner_info
		LIMIT 0,1
    </select>
</mapper>
